<?xml version="1.0"?>
<script>
<using xmlTag="mq-admin" module="com.alogic.xscript.kafka.admin.KKAdminConn" />

<mq-admin zookeeperConnect="127.0.0.1:2181" sessionTimeoutMs="10000" connectionTimeoutMs="8000">	
	<!-- 列出topic -->
	<list-topic tag="original">
	</list-topic>
	<!-- 创建新的topic -->
	<create-topic topic="test1219" partition="2" replication="1"></create-topic>
	<!-- 描述topic -->
	<desc-topic topic="test1219" tag="desctopic"></desc-topic>
	<!-- 删除topic -->
	<del-topic topic="test1219">
	</del-topic>
	<!-- 列出topic -->
	<list-topic tag="afterdelete">
	</list-topic>
	
</mq-admin>

</script>